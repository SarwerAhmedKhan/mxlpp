#!/bin/bash
# mxlpp - MX Linux Power Pack CLI Optimizer
# Version: 1.0

set -e

GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RED='\033[1;31m'
NC='\033[0m'

function update_system() {
  echo -e "${GREEN}üîÑ Updating system...${NC}"
  sudo apt update && sudo DEBIAN_FRONTEND=noninteractive apt upgrade -yq
}

function setup_zram() {
  echo -e "${GREEN}üß† Installing and enabling ZRAM...${NC}"
  sudo apt install -y zram-tools
  echo -e "ALGO=lz4\nPERCENT=50\nPRIORITY=100" | sudo tee /etc/default/zramswap > /dev/null
  sudo systemctl unmask zramswap
  sudo systemctl enable --now zramswap
}

function setup_preload() {
  echo -e "${GREEN}üöÄ Installing and enabling preload...${NC}"
  sudo apt install -y preload
  sudo systemctl enable --now preload
}

function setup_tlp() {
  echo -e "${GREEN}‚ö° Installing TLP...${NC}"
  sudo apt install -y tlp
  sudo systemctl enable --now tlp
}

function tweak_swappiness() {
  echo -e "${GREEN}‚öôÔ∏è Tuning swappiness...${NC}"
  if grep -q "vm.swappiness" /etc/sysctl.conf; then
    sudo sed -i 's/^vm\.swappiness=.*/vm.swappiness=10/' /etc/sysctl.conf
  else
    echo 'vm.swappiness=10' | sudo tee -a /etc/sysctl.conf > /dev/null
  fi
  sudo sysctl -p
}

function enable_trim() {
  echo -e "${GREEN}üí° Checking for SSD and enabling TRIM...${NC}"
  if lsblk -D | grep -q "1"; then
    sudo systemctl enable fstrim.timer
    echo -e "${GREEN}‚úî TRIM enabled.${NC}"
  else
    echo -e "${YELLOW}‚ö†Ô∏è No SSD detected. Skipping TRIM.${NC}"
  fi
}

function install_monitors() {
  echo -e "${GREEN}üìä Installing monitoring tools...${NC}"
  sudo apt install -y btop htop
}

function install_timeshift() {
  echo -e "${GREEN}üïí Installing Timeshift...${NC}"
  sudo apt install -y timeshift
}

function cleanup_system() {
  echo -e "${GREEN}üßº Cleaning up system...${NC}"
  sudo apt autoremove -y && sudo apt autoclean
}

function show_menu() {
  clear
  echo -e "${YELLOW}MX Linux Power Pack ‚Äì CLI Boost Menu${NC}"
  echo "==============================================="
  echo "1) Update system"
  echo "2) Setup ZRAM"
  echo "3) Enable preload"
  echo "4) Install TLP + Tune swappiness"
  echo "5) Enable SSD TRIM"
  echo "6) Install monitoring tools"
  echo "7) Install Timeshift"
  echo "8) Clean system"
  echo "9) Run ALL steps"
  echo "0) Exit"
  echo "==============================================="
  read -rp "Choose an option: " choice

  case $choice in
    1) update_system ;;
    2) setup_zram ;;
    3) setup_preload ;;
    4) setup_tlp; tweak_swappiness ;;
    5) enable_trim ;;
    6) install_monitors ;;
    7) install_timeshift ;;
    8) cleanup_system ;;
    9) update_system; setup_zram; setup_preload; setup_tlp; tweak_swappiness; enable_trim; install_monitors; install_timeshift; cleanup_system ;;
    0) echo "Exiting."; exit 0 ;;
    *) echo -e "${RED}Invalid option.${NC}" ;;
  esac
}

while true; do
  show_menu
  read -rp $'\nPress Enter to return to the menu...'
done
